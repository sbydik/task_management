<% if notice %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<p>
  <strong>件名</strong>
  <%= @task.subject %>
</p>

<p>
  <strong>優先度</strong>
  <%= @task.priority_i18n %>
</p>

<p>
  <strong>期限</strong>
  <%= format_datetime(@task.deadline) %>
</p>

<%= link_to '更新', edit_task_path(@task), {class: 'btn btn-outline-dark'} %>
<%= link_to '一覧へ戻る', tasks_path, {class: 'btn btn-outline-dark'} %>